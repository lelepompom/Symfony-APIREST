{% extends 'base.html.twig' %}

{% block title %}Results{% endblock %}

{% block body %}
    <h3>Results</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ result.id }}</td>
            </tr>
            <tr>
                <th>Result</th>
                <td>{{ result.result }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ result.time ? result.time|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <button class='col-3 btn btn-primary' type='button'>
        <a href="{{ path('results_index') }}" style="color: white">Back to list</a>
    </button>
    <button class='col-3 btn btn-warning' type='button'>
        <a href="{{ path('results_edit', {'id': result.id}) }}" style="color: white">Edit</a>
    </button>

    {{ include('results/_delete_form.html.twig') }}
{% endblock %}
