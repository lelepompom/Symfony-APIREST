{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <h3>Users</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ user.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Admin</th>
                <td>{{ user.admin ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <button class='col-3 btn btn-primary' type='button'>
        <a href="{{ path('users_index') }}" style="color: white">Back to list</a>
    </button>
    <button class='col-3 btn btn-warning' type='button'>
        <a href="{{ path('users_edit', {'id': user.id}) }}" style="color: white">Edit</a>
    </button>

    {{ include('users/_delete_form.html.twig') }}
{% endblock %}
